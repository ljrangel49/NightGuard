<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Circle background (currently black) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#D1CDCD" />
        </shape>
    </item>

    <!-- Inset the shield vector inside the circle -->
    <item>
        <inset
            android:drawable="@drawable/nightguard_logo"
            android:insetLeft="32dp"
            android:insetRight="32dp"
            android:insetTop="32dp"
            android:insetBottom="32dp" />
    </item>

</layer-list>